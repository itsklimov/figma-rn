{
  "name": "figma-rn",
  "version": "1.0.0",
  "description": "MCP server for Claude AI that generates production-ready React Native code from Figma designs. One-shot code generation with automatic pattern detection, AST-based TypeScript output, and Delta E color matching.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "figma-rn": "dist/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "figma",
    "react-native",
    "code-generation",
    "design-to-code",
    "figma-to-code",
    "figma-api",
    "claude",
    "anthropic",
    "ai",
    "typescript",
    "ast",
    "react-navigation",
    "react-hook-form",
    "zod",
    "mobile-development",
    "ui-components",
    "design-system"
  ],
  "author": "itsklimov",
  "license": "PolyForm-Small-Business-1.0.0",
  "homepage": "https://github.com/itsklimov/figma-rn#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itsklimov/figma-rn.git"
  },
  "bugs": {
    "url": "https://github.com/itsklimov/figma-rn/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint 'src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "ajv": "^8.12.0",
    "chroma-js": "^2.4.2",
    "cosmiconfig": "^9.0.0",
    "figma-api": "^2.1.0-beta",
    "glob": "^10.3.10",
    "prettier": "^3.2.0",
    "string-similarity": "^4.0.4",
    "ts-morph": "^21.0.0"
  },
  "devDependencies": {
    "@figma/rest-api-spec": "^0.35.0",
    "@types/chroma-js": "^2.4.0",
    "@types/node": "^20.0.0",
    "@types/string-similarity": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vitest": "^3.0.0"
  }
}
